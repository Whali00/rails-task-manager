<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
      <% if task.completed? %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a new task", new_path(@task) %></p>
