<h1><%= @task.title %></h1>

<p><%= link_to "Edit this task", edit_path(@task) %></p>

<p><%= @task.details %></p>

 <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>

<p><%= link_to "Back to list", "./" %></p>
